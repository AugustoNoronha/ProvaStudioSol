<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <View
        android:id="@+id/toptop"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/pink"/>

    <View
        android:id="@+id/mid"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/pink"/>

    <View
        android:id="@+id/bot"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/pink"/>



    <View
        android:id="@+id/topLeft"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/toptop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mid"
        android:background="@color/pink"/>

    <View
        android:id="@+id/topRight"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/toptop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mid"
        android:background="@color/pink"/>




    <View
        android:id="@+id/botLeft"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/mid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bot"
        android:background="@color/pink"/>

    <View
        android:id="@+id/botRight"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/mid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bot"
        android:background="@color/pink"/>



</androidx.constraintlayout.widget.ConstraintLayout>